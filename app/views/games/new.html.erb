<h1>New game</h1>
<div class="letters">
  <%@letters.each do |letter|%>
  <p><%= letter %></p>
  <% end %>
</div>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="What is the longest word you can find ?" class="form-control" required>
</form>
